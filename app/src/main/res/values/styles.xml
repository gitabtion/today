<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--设置Toolbar返回按钮的颜色-->
        <item name="colorControlNormal">@color/primary</item>

    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>
    <!--toolbar style-->
    <style name="toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TextMainTitle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="TextSquareTitle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:color">@color/text_primary</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>
