<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/img_manage_calendar"
        android:layout_width="@dimen/len_middle_item_width"
        android:layout_height="@dimen/len_middle_img_height"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_manage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_manage_calendar"
        android:layout_toRightOf="@id/img_manage_calendar"
        android:text="123123123123"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_primary"/>

    <TextView
        android:id="@+id/txt_manage_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_manage_calendar"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/img_manage_calendar"
        android:text="编辑"/>

    <TextView
        android:id="@+id/txt_manage_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_manage_calendar"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/txt_manage_edit"
        android:text="删除"/>

</RelativeLayout>