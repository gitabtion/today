<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/img_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_login_title"/>

        <TextView
            android:id="@+id/txt_account_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_account_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"
            android:text="@string/text_account_title"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_secondary"/>

        <FrameLayout
            android:id="@+id/frame_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_account_title"
            android:layout_marginTop="@dimen/spacing_login">
        </FrameLayout>

    </RelativeLayout>
</FrameLayout>
