<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_search_calendar"
        android:layout_width="@dimen/len_middle_img_width"
        android:layout_height="@dimen/len_middle_img_height"
        android:layout_marginEnd="@dimen/margin_search_img_right"
        android:layout_marginRight="@dimen/margin_search_img_right"
        android:layout_marginTop="@dimen/margin_search_img_top"
        android:layout_marginLeft="@dimen/margin_search_img_left"
        android:background="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/margin_search_img_left"/>

    <TextView
        android:id="@+id/txt_search_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_search_calendar"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/img_search_calendar"
        android:layout_toRightOf="@id/img_search_calendar"
        android:text="测试用"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_secondary"/>

    <TextView
        android:id="@+id/txt_search_calendar_subscribed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_search_calendar"
        android:layout_below="@id/txt_search_calendar_title"
        android:layout_toEndOf="@id/img_search_calendar"
        android:layout_toRightOf="@id/img_search_calendar"
        android:gravity="bottom"
        android:text="热度:2000"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_ternary"/>
</RelativeLayout>