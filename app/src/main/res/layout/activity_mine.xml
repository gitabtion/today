<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_background"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:outlineProvider="background">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/len_small_img_width"
            android:layout_height="@dimen/len_small_img_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_back_black"/>

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/img_back"
            android:text="个人信息"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_title"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="@dimen/len_large_img_width"
                android:layout_height="@dimen/len_large_img_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_huge"/>

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="center"
                android:maxLines="1"
                android:text="Line_Vision"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_primary"/>

            <TextView
                android:id="@+id/txt_user_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="center"
                android:maxLines="1"
                android:text="暂无签名"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_secondary"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/frame_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>


</LinearLayout>