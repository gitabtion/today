<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/img_cover_avatar"
        android:layout_width="@dimen/len_huge_img_width"
        android:layout_height="@dimen/len_huge_img_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/txt_cover_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_cover_avatar"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_secondary"/>

    <TextView
        android:id="@+id/txt_cover_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cover_title"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:shadowColor="@color/text_primary"
        android:shadowRadius="2"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_ternary"/>
</RelativeLayout>
